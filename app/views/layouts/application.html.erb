<!-- app/views/layout/application.html.erb -->

<!DOCTYPE html>
<html>
<head>
  <title>PacificaCoffee</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>

  <!-- mobile view -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

<!--
Navigation
 -->

 <header class="main-header" id="main-header">
   <%= link_to('/') do %>
   <h3> Pacifica Coffee </h3>
  <% end %>

    <button id='mobile-menu-btn' class='mobile-menu-btn'> menu </button>

    <ul class="main-nav" id="main-nav">
    <% if current_user %>
      <li>Hello <%= current_user.user_name %></li>

        <%= link_to 'Cart', '/users/cart' %>
      </li>
      <li>
        <%= link_to 'Order History', '/users/order_history' %>
      </li>

      <% if current_user.admin %>

        <li>
          <%= link_to 'admin view', '/admin' %></li>
        <li>
          <%= link_to 'user view', '/items' %>
        </li>
      <% end %>
      <% else %>
          <li>
          <%= link_to 'Login', '/login' %>
        </li>
        <li>
          <%= link_to 'Signup', '/signup' %>
        </li>
      <% end %>
      <li>
        <%= link_to "Logout", '/logout' %> </li>
      <li>
    </ul>

</header>

<div class="error-notice">
  <p><%= notice %></p>
</div>


<%= yield %>

</body>
</html>