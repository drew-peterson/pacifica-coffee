<!-- app/views/layout/application.html.erb -->

<!DOCTYPE html>
<html>
<head>
  <title>PacificaCoffee</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  Signed in as <%= current_user.user_name %> | <%= link_to "Logout", '/logout' %>
    <%= link_to 'home', '/' %> |
    <%= link_to 'Cart', '/users/cart' %> |
    <%= link_to 'Order History', '/users/order_history' %> |
    <% if current_user.admin %>
    <div style="float: right">
      <%= link_to 'admin view', '/admin' %> |
      <%= link_to 'user view', '/items' %>
    </div>
  <% end %>
<% else %>
  <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
<% end %>


<p><%= notice %></p>




<%= yield %>

</body>
</html>