
<section id="order-history">

  <% prices = [] %>
    <% @items.each do |item, qty| %>
      <div class="details">
        <span> <%= item.item_name %> </span>
        <span> <%= item.item_description %> </span>
        <span> $<%= item.price %>.00 </span>
              <% prices << item.price * qty.to_i %>
      </div>
    <% end %>

  <h4>Order Total: $<%= prices.inject(:+) %>.00</h4>

</section>