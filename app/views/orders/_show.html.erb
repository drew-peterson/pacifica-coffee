<h1>Show partial</h1>

<% prices = [] %>
<ul>
  <% @items.each do |item, qty| %>
    <div class="item" style="border-bottom: 1px solid black; margin-bottom: 5px;">
      <li> <%= item.item_name %> </li>
      <li> <%= item.item_description %> </li>
      <li> $<%= item.price %>.00 </li>
            <% prices << item.price * qty.to_i %>
    </div>
  <% end %>
</ul>

<h4>Order Total: $<%= prices.inject(:+) %>.00</h4>