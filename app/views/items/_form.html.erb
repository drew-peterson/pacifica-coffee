<%= form_for(@item) do |f| %>
  <%= label_tag :item_name, "Name" %>
  <%= f.text_field :item_name %>
<br>
  <%= label_tag :item_description, "Description" %>
  <%= f.text_area :item_description %>
<br>
  <%= label_tag :item_quantity, "Quantity" %>
  <%= f.number_field :quantity %>
<br>
  <%= label_tag :price, "Price" %>
  <%= f.number_field :price %>
<br>
  <%= label_tag :sku, "Sku" %>
  <%= f.text_field :sku %>
<br>
  <%= label_tag :large_image, "Large Image" %>
  <%= f.text_field :large_image %>
<br>
  <%= label_tag :small_image, "Small Image" %>
  <%= f.text_field :small_image %>
<br>
  <%= f.submit 'Submit' %>
<% end %>
