<h1>List of all items | Admin Edition </h1>
<%= link_to 'Add Item', new_item_path %>
<ul>
  <% @items.each do |item| %>
    <div class="item" style="border-bottom: 1px solid black; margin-bottom: 5px;">
      <li> <%= item.item_name %> </li>
      <li> <%= item.item_name %> </li>
      <li> <%= item.item_description %> </li>
      <li> $<%= item.price %>.00 </li>
      <% if current_user.admin %>
        <li>
          <%= link_to 'Update', edit_item_path(item) %>
          <%= link_to 'Delete',
            item,
            method: :delete,
            data: { confirm: 'Are you sure?' } %>
        </li>
      <% end %>
    </div>
  <% end %>
</ul>

