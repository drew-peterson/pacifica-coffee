
<!-- Filter Navigation -->
<button id='mobile-filter-btn' class='mobile-filter-btn'>Filter</button>

<aside class="filter-container">
  <%= render "navigation/filter_nav" %>
</aside>

<ul class="items-container">
  <% @items.each do |item| %>
    <div class="item-card">

      <!-- Quick Add Plus Btn -->
    <%= form_for :user, url: '/users/cart', html: {class: 'quickform'} do |f| %>
      <%= hidden_field_tag('item_id', value = item.id) %>
      <%= hidden_field_tag('item_qty', value = 1) %>
      <label for='quickAddCart' class="quickAddBtn">
        <%= f.submit 'Add to Cart', id: 'quickAddCart' %>
      </label>

    <% end %>


      <!-- product image -->
      <section class="itemImage"></section>

      <!-- Item Details -->
      <h4> <%= item.item_name %> </h4>
      <li> $<%= item.price %>.00 </li>

      <!-- Quick view modal and button-->
      <!-- pass along the local var as an istance only way to traverse render -->
      <% @item = item %>
      <%= render 'quick_view', locals: @item %>



    </div>
  <% end %>
</ul>