<div class="mobile-header">
  <%= link_to('/') do %>
    <h3> Pacifica Coffee </h3>
  <% end %>
</div>


<section class="signup-container">

  <%= form_for :user, url: '/users' do |f| %>

    <span class="signup-col">
      <p>First Name</p>
       <%= f.text_field :first_name, :required => true %>
      <p>Last Name</p>
       <%= f.text_field :last_name, :required => true %>
    </span>

    <span class="signup-col signup-col-2">
      <p>User Name</p>
       <%= f.text_field :user_name, required: true %>
    </span>

    <span class="signup-col signup-col-3">
      <p>Password</p>
       <%= f.password_field :password, required: true, class: 'password-psw' %>
       <span>
        <label class="psw-label" for="user_password"> Passwords must match</label>
       </span>

<!-- pattern does not work... -->
