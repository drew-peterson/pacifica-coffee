<div class="mobile-header">
  <%= link_to('/') do %>
    <h3> Pacifica Coffee </h3>
  <% end %>
</div>


<section class="signup-container">

  <%= form_for :user, url: '/users' do |f| %>

    <span class="signup-col">
      <p>First Name</p>
       <%= f.text_field :first_name, :required => true %>
      <p>Last Name</p>
       <%= f.text_field :last_name, :required => true %>
    </span>

    <span class="signup-col signup-col-2">
      <p>User Name</p>
       <%= f.text_field :user_name, :required => true %>
    </span>

    <span class="signup-col signup-col-3">
      <p>Password</p>
       <%= f.password_field :password, :required => true %>
      <p>Password Confirmation</p>
       <%= f.password_field :password_confirmation, :required => true %>
    </span>

    <%= f.submit 'Submit', class: 'signup-submit-btn form-submit-btn' %>

  <% end %>

  <%= link_to 'Already have an account?', login_path, class: 'signup-login' %>

</section>

